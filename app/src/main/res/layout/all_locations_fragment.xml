<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AllLocationsFragment" android:id="@+id/cLayout">


    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/MainTitle"
            android:text="@string/rooms"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView4"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:overScrollMode="never"
            android:layout_height="0dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/rv_floors"
            android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>